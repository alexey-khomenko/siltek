//-
    x-transition:enter="bxm-transition",
    x-transition:enter-start="bxm-transition-2-enter-start",
    x-transition:enter-end="bxm-transition-2-enter-end",
    x-transition:leave="bxm-transition",
    x-transition:leave-start="bxm-transition-2-leave-start",
    x-transition:leave-end="bxm-transition-2-leave-end",
table(x-show="step === 2", x-cloak)
    tbody
        tr
            td
                strong
                    | Пігмент
            td
                strong
                    | Кількість, мл
            td(class="bxm-step-2-right")
                strong
                    | Ціна пігменту, грн з ПДВ

        template(x-for="item in pigments")
            tr
                td(x-text="item.name")
                td(x-text="item.quantity")
                td(x-text="item.price")

        tr
            td(colspan="3", class="text-right")
                | &nbsp;

        tr
            td(colspan="2", class="text-right")
                | Ціна пігментів, грн. з ПДВ
            td(x-text="pigments_price")
        tr
            td(colspan="2", class="text-right")
                | Доплата за тонування, грн. з ПДВ
            td(x-text="pigments_price_up")
        tr
            td(colspan="2", class="text-right")
                strong
                    | Загальна вартість тонування, грн. з ПДВ
            td
                strong(x-text="pigments_price_amount")
        tr
            td(colspan="2", class="text-right")
                | Рекомендована роздрібна вартість продукту-основи, грн. з ПДВ
            td(x-text="base_price")
        tr
            td(colspan="2", class="text-right")
                strong
                    | % знижки
            td
                input(type="number", step="0.1", min="0.00", max="100.0", name="base_discount", class="text-center bxm-step-2-right-inner", x-model="base_discount", x-spread="discount")
        tr
            td(colspan="2", class="text-right")
                | Вартість продукту-основи зі знижкою, грн з ПДВ
            td(x-text="base_amount")
        tr
            td(colspan="2", class="text-right")
                strong
                    | Сума, грн з ПДВ
            td
                strong(x-text="amount")
